import sys
import tables
import matplotlib
matplotlib.use('pdf')
import pylab

fname = sys.argv[1]

hf = tables.openFile(fname)
print
print 'Generic package commit %s'%hf.root.input_csv.attrs.generic_commit
print 'Module %s commit %s'%(hf.root.input_csv.attrs.mod_name, hf.root.input_csv.attrs.mod_commit)
print 'Started %s'%hf.root.input_csv.attrs.starttime
pylab.rec2csv(hf.root.input_csv[:],fname+'-input-data.csv')
print